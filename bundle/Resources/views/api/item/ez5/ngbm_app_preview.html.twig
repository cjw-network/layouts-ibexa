{% if content.fields.image is defined and not ez_is_field_empty(content, 'image') %}
    {% set image_alias = ez_image_alias(content.field('image'), content.versionInfo, 'ngbm_app_preview') %}

    {% if image_alias %}
        <div class="image">
            <img src="{{ image_alias.uri }}" />
        </div>
    {% endif %}
{% endif %}

<div class="name">
    <p>{{ ez_content_name(content) }}</p>
</div>
