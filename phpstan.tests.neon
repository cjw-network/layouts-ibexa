includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon
    - vendor/phpstan/phpstan-phpunit/rules.neon

parameters:
    dynamicConstantNames:
        - Symfony\Component\HttpKernel\Kernel::VERSION_ID

    ignoreErrors:
        -
            message: '#Call to an undefined method Netgen\\Layouts\\Ez\\Security\\Role\\RoleHierarchy::getReachableRoleNames\(\).#'
            path: tests/lib/Security/Role/RoleHierarchyTest.php

        -
            message: '#Toflar\\Psr6HttpCacheStore\\Psr6StoreInterface#'
            path: tests/lib/HttpCache/LocalClientTest.php

        # Disable errors about missing value types in PHPUnit data providers

        - '#Method .+Test::\w+DataProvider\(\) return type has no value type specified in iterable type array.#'
