{
    "name": "netgen/layouts-ezplatform",
    "description": "Netgen Layouts & eZ Platform integration",
    "license": "GPL-2.0-only",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://www.netgenlabs.com"
        }
    ],
    "require": {
        "netgen/layouts-core": "~1.0.0",
        "netgen/content-browser-ezplatform": "~1.0.0",
        "ezsystems/ezpublish-kernel": "^7.5 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "symfony/phpunit-bridge": "^4.2",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "ezsystems/ezplatform-http-cache": ">=0.9, <1.0",
        "ezsystems/ezplatform-admin-ui": "^1.5 || ^2.0",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "matthiasnoback/symfony-config-test": "^4.0.1",
        "netgen/tagsbundle": "^3.4",
        "franzl/studio": "*"
    },
    "suggest": {
        "netgen/layouts-ezplatform-site-api": "Integrate Netgen Layouts with eZ Platform Site API to boost your site-building productivity with eZ Platform"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-html=coverage --colors=always",
        "phpstan": "@php vendor/bin/phpstan analyse -c phpstan.neon --level=7 --ansi lib bundle",
        "phpstan-tests": "@php vendor/bin/phpstan analyse -c phpstan.tests.neon --level=7 --ansi tests"
    },
    "autoload": {
        "psr-4": {
            "Netgen\\Layouts\\Ez\\": "lib/",
            "Netgen\\Bundle\\LayoutsEzPlatformBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\Layouts\\Tests\\": "vendor/netgen/layouts-core/tests/lib/",
            "Netgen\\Layouts\\Ez\\Tests\\": "tests/lib/",
            "Netgen\\Bundle\\LayoutsEzPlatformBundle\\Tests\\": "tests/bundle/"
        },
        "files": [
            "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
