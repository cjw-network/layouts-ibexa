{
    "name": "netgen/block-manager-ezpublish",
    "description": "Netgen Layouts & eZ Platform integration",
    "license": "proprietary",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://www.netgenlabs.com"
        }
    ],
    "require": {
        "netgen/block-manager": "~0.12.0",
        "ezsystems/ezpublish-kernel": "^5.4 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "symfony/phpunit-bridge": "^4.1",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-phpunit": "^0.9",
        "ezsystems/ezplatform-http-cache": "*",
        "matthiasnoback/symfony-dependency-injection-test": "^3.0",
        "matthiasnoback/symfony-config-test": "^4.0",
        "netgen/tagsbundle": "^2.0 || ^3.0",
        "franzl/studio": "*"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-html=coverage --colors=always",
        "phpstan": "@php vendor/bin/phpstan analyse -c phpstan.neon --level=7 --ansi lib bundle",
        "phpstan-tests": "@php vendor/bin/phpstan analyse -c phpstan.tests.neon --level=7 --ansi tests"
    },
    "repositories": [
        { "type": "composer", "url": "https://packagist.netgen.biz" }
    ],
    "autoload": {
        "psr-4": {
            "Netgen\\BlockManager\\Ez\\": "lib/",
            "Netgen\\Bundle\\EzPublishBlockManagerBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\BlockManager\\Tests\\": "vendor/netgen/block-manager/tests/lib/",
            "Netgen\\BlockManager\\Ez\\Tests\\": "tests/lib/",
            "Netgen\\Bundle\\EzPublishBlockManagerBundle\\Tests\\": "tests/bundle/"
        },
        "files": [
            "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.12.x-dev"
        }
    }
}
